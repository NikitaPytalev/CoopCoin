{
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["es2022"],
    "module": "commonjs",
    "target": "es2022",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata":true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "typeRoots": [
      "src/@types",
      "./node_modules/@types",
    ]   
  },
  "include": ["src"]
}
